generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Alumno {
  id        Int      @id @default(autoincrement())
  nombre    String   
  apellidos String
  carrera   Carrera? @relation(fields: [carreraId], references: [id], onDelete: SetNull)
  carreraId Int?     @map("carrera_id")

  @@map("alumnos")
}

model Carrera {
  id      Int      @id @default(autoincrement())
  nombre  String   @unique
  alumnos Alumno[]

  @@map("carreras")
}
